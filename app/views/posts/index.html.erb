
<div class="row">

  <div class="col-sm-8 col-md-8">
  <ul>
    <% @posts.each do |post| %>
      <h2><%= link_to post.title, post_path(post.id) %></h2>
      <p><%= truncate post.body, length: 50 %></p>
      <p style="color: grey">カテゴリ：
      <% if post.category == nil %>
      <%= '指定なし' %>
      <% else %>
      <%= post.category %>
      <% end %>
      <br>
      更新日時：<%= post.updated_at %>
      </p>
          <%= link_to '続きを読む', post_path(post.id), class: "btn btn-primary" %>
          <%= link_to '削除する', post_path(post.id), method: :delete, data: { confirm: '削除しますか？' } , class: "btn btn-danger"%>
      </li>
      <br>
      <br>
    <% end %>
    </ul>
  </div>

<%= paginate @posts %>

  <div class="col-sm-4 col-md-4">

    <% if author_signed_in? %>
    <p>書いている人：<br>
    <%= current_author.name %></p>
    <p>どんな人？：<br>
    <%= current_author.description %></p>
    <p><%= image_tag current_author.image_url, class: 'img-responsive' %></p>


    <% end %>

      <p>最新の記事（先着順）</p>

      <ul>
      <% @posts.each do |post| %>
      <li><%= link_to post.title, post_path(post.id) %></li>
      <% end %>
    </ul>

  </div>

</div>

